APP_NAME=Expressud
APP_ENV=production
APP_KEY=   # leave blank; generated on first deploy
APP_DEBUG=false
APP_URL=https://api.expressud.com
LOG_CHANNEL=stack

# Database — placeholders only, NO real values
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=expressud-db      # or whatever your DB name is
DB_USERNAME=
DB_PASSWORD=

# Sessions / Cache / Queue
SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION=database
CACHE_STORE=database
CACHE_PREFIX=

# Redis (optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail — placeholders only
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="Expressud"

# Payments / 3rd parties — placeholders only
FLW_SECRET_KEY=
FLW_SECRET_HASH=

# Pusher — placeholders only
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=eu

# AWS: DO NOT put static access keys here; use the EC2 IAM role instead.
# (So omit AWS_ACCESS_KEY_ID / AWS_SECRET_ACCESS_KEY entirely.)
